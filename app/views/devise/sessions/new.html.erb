<div class="panel panel-default widget">
  <div class="panel-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true,class:"form-control",placeholder:"Email Adresiniz" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off" ,class:"form-control", placeholder:"Åžifreniz"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in",class:"form-control btn btn-primary" %>
  </div>
<% end %>

</div>
</div>
<%= render "devise/shared/links" %>
